@using MVCOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareketleri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table tabel-border">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>CARİ</th>
        <th>PERSONEL</th>
        <th>ADET</th>
        <th>FİYAT</th>
        <th>TOPLAM</th>
        <th>TARİH</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>



    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.SatisID</td>
            <td>@u.Urun.UrunAd</td>
            <td>@u.Cariler.CariAd @u.Cariler.CariSoyad</td>
            <td>@u.Personels.PersonelAd @u.Personels.PersonelSoyad</td>
            <td>@u.Adet</td>
            <td>@u.Fiyat</td>
            <td>@u.ToplamTutar</td>
            <td>@u.Tarih</td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-success" style="background-color:darksalmon">Satıs Detay</a></td>

        </tr>


    }
</table>
<a href="/Satıs/YeniSatıs" class="btn btn-info">Yeni Satış</a>

